{
  "name": "bootstrap-rn",
  "version": "0.3.3",
  "description": "Bootstrap RN provides Bootstrap components for React Native.",
  "author": "Markus Wetzel <markuswetzel@gmx.net>",
  "license": "MIT",
  "keywords": [
    "react",
    "native",
    "react-native",
    "bootstrap",
    "ui",
    "style"
  ],
  "repository": "https://github.com/examunity/bootstrap-rn.git",
  "bugs": {
    "url": "https://github.com/examunity/bootstrap-rn/issues"
  },
  "source": "src/index.js",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "react-native": "src/index.js",
  "types": "./lib/types/index.d.ts",
  "scripts": {
    "check-types": "tsc --noEmit",
    "build-types": "rm -rf lib/types && tsc -d --emitDeclarationOnly --outDir lib/types",
    "copy-types": "cpy lib/types/*.d.ts lib/commonjs && cpy lib/types/*.d.ts lib/module",
    "build": "yarn build-types && bob build && yarn copy-types",
    "prepare": "packsy validate && yarn build",
    "lint": "packsy pre-commit && yarn check-types"
  },
  "files": [
    "src",
    "lib"
  ],
  "dependencies": {
    "@react-native-aria/focus": "^0.2.7",
    "@react-native-aria/overlays": "^0.3.5",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "css-to-react-native": "^3.2.0",
    "prop-types": "^15.7.2",
    "tiny-invariant": "^1.3.1",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "cpy-cli": "^5.0.0",
    "packsy": "^0.2.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.72.5",
    "react-native-builder-bob": "^0.23.1",
    "react-native-svg": "13.9.0"
  },
  "peerDependencies": {
    "react": ">=16.13.1",
    "react-dom": ">=16.13.1",
    "react-native": ">=0.63.0",
    "react-native-svg": ">=12.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "packsy pre-commit"
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module"
    ]
  },
  "engines": {
    "node": ">= 8",
    "npm": ">= 5"
  }
}
